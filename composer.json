{
    "name": "streams/api",
    "description": "A RESTful API for Laravel Streams.",
    "type": "streams-addon",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Thompson",
            "email": "ryan@pyrocms.com"
        }
    ],
    "require": {
        "streams/core": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Streams\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Streams\\Api\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "pre-commit": [
            "php-cs-fixer fix --config .php-cs-fixer.php"
        ],
        "pre-push": [
            "php-cs-fixer fix  --dry-run --stop-on-violation --config .php-cs-fixer.php"
        ]

    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-develop": "1.1.x-dev"
        },
        "laravel": {
            "providers": [
                "Streams\\Api\\ApiServiceProvider"
            ]
        }
    }
}
