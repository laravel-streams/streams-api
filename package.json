{
    "name": "@laravel-streams/api",
    "version": "1.0.0",
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "repository": {
        "url": "git@github.com:laravel-streams/api-js",
        "type": "git"
    },
    "types": "resources/public/types/index.d.ts",
    "main": "resources/public/js/index.js",
    "module": "resources/lib/index.ts",
    "scripts": {
        "build": "mix",
        "dev": "mix",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "clean": "rimraf resources/lib/**/*.d.ts public/js",
        "dts": "tsc --project webpack.tsconfig.json --emitDeclarationOnly",
        "test": "cd test && mocha"
    },
    "dependencies": {
        "@laravel-streams/core": "^1.0.0",
        "@laravel-streams/streams-api": "^1.0.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@laravel-streams/mix-extension": "^1.0.0",
        "laravel-mix": "^6.0.34"
    },
    "streams": {
        "output": {
            "name": [
                "streams",
                "api"
            ],
            "type": "assign"
        },
        "src": "resources/lib",
        "bundler": "mix",
        "scripts": {
            "dev": "dev",
            "prod": "build",
            "watch": "watch",
            "test": "test"
        }
    }
}
